{
    "name": "Tabs De-duplicator",
    "description": "Extension that notifies when two or mare tabs with the same url are opened",
    "version": "1.0.0",
    "manifest_version": 3,
    "permissions": [
        "tabs", 
        "storage"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_title": "unclutter your tabs here",
        "default_icon": {             
            "16": "./images/icon.png",
            "32": "./images/icon.png",
            "48": "./images/icon.png",
            "128": "./images/icon.png"
        }
    },
    "icons": {
        "16": "./images/icon.png",
        "32": "./images/icon.png",
        "48": "./images/icon.png",
        "128": "./images/icon.png"
    },
    "background": {
        "service_worker": "background.js"
    }
}